# Server Configuration
PORT=3000
NODE_ENV=production

# Database
DATABASE_URL=mongodb://localhost:27017/your_database_name

# Security (Bcrypt)
BCRYPT_SALT_ROUNDS=10
BCRYPT_SECRET=your_long_random_bcrypt_secret_string

# Authentication (JWT Access Token)
JWT_ACCESS_TOKEN_SECRET=your_access_token_secret_key
JWT_ACCESS_TOKEN_EXPIRATION_MS=3600000  # 1 hour in milliseconds

# Authentication (JWT Refresh Token)
JWT_REFRESH_TOKEN_SECRET=your_refresh_token_secret_key
JWT_REFRESH_TOKEN_EXPIRATION_MS=604800000  # 7 days in milliseconds
